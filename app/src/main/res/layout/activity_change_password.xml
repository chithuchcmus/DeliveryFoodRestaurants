<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activity.ChangePasswordActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewRegister"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/old_pass_change_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#2A3c58"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thay đổi mật khẩu"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/old_pass_change_layout"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/new_password_changepass_layout1"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/image_view_add">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_old_pass"
            android:ems="10"
            android:textSize="14dp"
            android:textColorHint="#fff"
            android:hint="mật khẩu cũ"
            android:inputType="textPassword"
            android:id="@+id/old_pass_change"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/new_password_changepass_layout1"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/new_password_changepass_layout2"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/image_view_add">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:textSize="14dp"
            android:textColorHint="#fff"
            android:hint="Mật Khẩu Mới"
            android:inputType="textPassword"
            android:id="@+id/new_pass_change"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/new_password_changepass_layout2"
        android:layout_marginBottom="50dp"
        android:layout_above="@id/change_pass_submit"
        android:layout_centerHorizontal="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="Nhập Lại Mật Khẩu"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textSize="14dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.button.MaterialButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="10dp"
        android:id="@+id/change_pass_submit"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mybutton"
        android:text="Thay đổi"
        android:textColor="#fff"
        android:fontFamily="@font/museosanscyrl"
        android:textSize="14dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
