<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activity.SignUpActivity">
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#2A3c58"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardViewRegister"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/ten_mon_edit"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="italic"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thông Tin Quán Ăn"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/ten_mon_edit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/gia_mon_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:textColorHint="#fff"
        android:hint="Tên Quán"
        android:inputType="textPersonName"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/gia_mon_edit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:textColorHint="#fff"
        android:hint="Số Điện Thoại"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/password_register"
        android:layout_centerHorizontal="true" />
    <EditText
        android:textColorHint="#fff"
        android:id="@+id/password_register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/email_register"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textColorHint="#fff"
        android:id="@+id/email_register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/address_register"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textColorHint="#fff"
        android:id="@+id/address_register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_location"
        android:ems="10"
        android:hint="Địa Chỉ"
        android:inputType="text"
        android:layout_marginBottom="100dp"
        android:layout_alignBottom="@+id/delete_submit"
        android:layout_alignLeft="@+id/password_register"
        android:layout_alignStart="@+id/password_register" />

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/delete_submit"
        android:layout_marginBottom="31dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
