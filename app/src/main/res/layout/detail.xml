<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    tools:context=".Activity.AddFoodActivity">
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#2A3c58"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardViewRegister"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/ten_mon_add"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="italic"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thông Tin Món Ăn"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/ten_mon_add"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/gia_mon_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:textColor="#fff"
        android:hint="Tên Món"
        android:inputType="textPersonName"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/gia_mon_edit"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:textColor="#fff"
        android:hint="Số Điện Thoại"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="100dp"
        android:layout_alignBottom="@+id/image_view_add"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_alignLeft="@+id/gia_mon_edit"
        android:layout_alignRight="@+id/gia_mon_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_alignBottom="@+id/add_submit"
        android:id="@+id/image_view_add"
        android:layout_width="150dp"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/button_find_image_edit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gia_mon_edit"
        android:layout_alignRight="@+id/gia_mon_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="61dp"
        android:background="#11000000"
        android:textColor="#fff"
        android:text="Hình Ảnh"
        android:fontFamily="@font/arrusb"
        android:textSize="12dp" />

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/edit_submit"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sửa Món"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/add_submit"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Xóa Món"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
